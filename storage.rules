rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // QUICK: admin list by email (case-sensitive)
    function isAdmin() {
      return request.auth != null &&
             request.auth.token.email in [
               "belen_luna_1801@hotmail.com" // ðŸ‘ˆ your admin email(s) here
             ];
    }

    // Owner check (for client downloads)
    function isOwner(docId) {
      return request.auth != null &&
             exists(/databases/(default)/documents/projectRequests/$(docId)) &&
             get(/databases/(default)/documents/projectRequests/$(docId)).data.email
               == request.auth.token.email;
    }

    // Final deliverables: admin writes; admin or owner reads
    match /deliverables/{docId}/{fileName} {
      allow write: if isAdmin();
      allow read:  if isAdmin() || isOwner(docId);
    }

    // Source uploads: client writes; only admin reads (optional)
    match /projects/{projectId}/{fileName} {
      allow write: if request.auth != null;
      allow read:  if isAdmin();
    }
  }
}

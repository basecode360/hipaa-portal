rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function signedIn() { return request.auth != null; }
    function isAdmin() {
      return signedIn() &&
        get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    // Cliente sube sus fuentes SIN consultar Firestore
    match /user_uploads/{uid}/{docId}/{fileName=**} {
      // Solo el due√±o puede escribir/leer
      allow write, read: if signedIn() && request.auth.uid == uid;
    }

    // (Opcional) Entregables para el cliente
    match /deliverables/{docId}/{fileName=**} {
      allow write: if isAdmin();
      allow read: if signedIn() && (
        get(/databases/(default)/documents/projectRequests/$(docId)).data.ownerUid == request.auth.uid
        || isAdmin()
      );
    }
  }
}

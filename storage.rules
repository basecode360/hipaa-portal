rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function signedIn() {
      return request.auth != null;
    }
    function isAdmin() {
      return signedIn() &&
        get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    // Archivos fuente subidos por el cliente
    match /projects/{docId}/{fileName} {
      allow write: if signedIn() &&
        // el doc de Firestore ya existe y pertenece al usuario
        get(/databases/(default)/documents/projectRequests/$(docId)).data.ownerUid == request.auth.uid;
      // (opcional) lectura privada para el dueño y los admins
      allow read: if signedIn() && (
        get(/databases/(default)/documents/projectRequests/$(docId)).data.ownerUid == request.auth.uid
        || isAdmin()
      );
    }

    // Entregables subidos por admin
    match /deliverables/{docId}/{fileName} {
      allow write: if isAdmin();
      // lectura: dueño del proyecto o admin
      allow read: if signedIn() && (
        get(/databases/(default)/documents/projectRequests/$(docId)).data.ownerUid == request.auth.uid
        || isAdmin()
      );
    }
  }
}
